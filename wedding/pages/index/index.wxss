.list{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.item{
  padding: 20rpx;
  width: 50%;
  box-sizing: border-box;
}
.item-img{
  width: 100%;
  height: 220rpx;
}
.item-text{
  width: 100%;
  display: block;
  text-align: center;
  font-size: 28rpx;
}
.music-btn{
  position: fixed;
  top:20rpx;
  right: 20rpx;
}
@-webkit-keyframes move {
    to{transform:  rotateZ(360deg)}
}
.music-btn image{
  width: 100rpx;
  height: 100rpx;
}
.rotate{
  transform: rotateZ(0deg);
  -webkit-animation: move 4s infinite linear;
}
.section{
  padding: 20rpx 30rpx;
}
video{
  width: 100%;
  height: 400rpx;
}